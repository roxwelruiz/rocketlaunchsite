<div class="container">
  <div class="page-header">
    <h1>Launch Pads</h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Subject</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td class="custom-td"><%= room.name %></td>
          <td class="custom-td"><%= room.subject %></td>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>'), room, class: "list-button btn-go" %>
          </td>
          <td>
            <% if room.user == current_user %>
              <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'), edit_room_path(room), class: "list-button btn-edit" %>
            <% end %>
          </td>
          <td>
            <% if room.user == current_user %> 
              <%= link_to raw('<span class="list-glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>'), room, method: :delete, data: { confirm: 'Are you sure?' } , class: "list-button btn-delete" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>

  <div class="row lowermenu center-block">
    <p class="col-sm-6 center-content"><%= link_to 'New Launch Pad', new_room_path, class: 'large-anchors' %></p>
    <p class="col-sm-6 center-content"><%= link_to 'Return to Base', root_path, class: 'large-anchors' %></p>
  </div>

  <hr class="heavy-hr">
</div>  