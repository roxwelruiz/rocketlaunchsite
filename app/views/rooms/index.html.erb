<div class="container">
  <div class="page-header">
    <h1>Launch Pads</h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Subject</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.subject %></td>
          <td><%= link_to 'Go', room %></td>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
          <td><%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>

  <div class="row lowermenu center-block">
    <p class="col-sm-6 center-content"><%= link_to 'New Launch Pad', new_room_path, class: 'large-anchors' %></p>
    <p class="col-sm-6 center-content"><%= link_to 'Return to Base', root_path, class: 'large-anchors' %></p>
  </div>

  <hr class="heavy-hr">
</div>  